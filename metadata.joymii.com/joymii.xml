<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<scraper name="JoyMii" content="movies" framework="1.0" date="2013-03-01">
    <NfoUrl dest="3">
        <RegExp input="$$1" output="\1" dest="3">
            <expression />
        </RegExp>
    </NfoUrl>
    <CreateSearchUrl dest="3">
        <RegExp input="$$1" output="&lt;url&gt;http://www.google.com/cse?cx=006698336934997514206:86z-tlx_vom&amp;q=\1%20&quot;video&quot;&lt;/url&gt;" dest="3">
            <expression noclean="1" />
        </RegExp>
    </CreateSearchUrl>
    <GetSearchResults dest="5">
        <RegExp input="$$3" output="&lt;?xml version=&quot;1.0&quot; encoding=&quot;utf-8&quot; standalone=&quot;yes&quot;?&gt;&lt;results&gt;\1&lt;/results&gt;" dest="5">
            <RegExp input="$$1" output="&lt;entity&gt;&lt;title&gt;\2 Video&lt;/title&gt;&lt;year&gt;&lt;/year&gt;&lt;url&gt;\1&lt;/url&gt;&lt;/entity&gt;" dest="3">
                <expression fixchars="2" trim="2">this, '([^']+)'\)&quot;&gt;([^:]+)Video&lt;/b&gt; - joymii&lt;/a</expression>
            </RegExp>
            <expression noclean="1" />
        </RegExp>
    </GetSearchResults>
    <GetDetails clearbuffers="no" dest="3">
        <RegExp input="$$5" output="&lt;?xml version=&quot;1.0&quot; encoding=&quot;utf-8&quot; standalone=&quot;yes&quot;?&gt;&lt;details&gt;\1&lt;/details&gt;" dest="3">

            <!-- Title !-->
            <RegExp input="$$1" output="&lt;title&gt;\1&lt;/title&gt;" dest="5">
                <expression trim="1" fixchars="1">&lt;title&gt;([^&lt;]+) - Video - joymii&lt;/title&gt;</expression>
            </RegExp>

            <!-- Year !-->
            <RegExp input="$$1" output="&lt;year&gt;\1&lt;/year&gt;" dest="5+">
                <expression fixchars="1">id=filmYear[^&gt;]+&gt;\(([0-9]*)\)</expression>
            </RegExp>

            <!-- Director's names !-->
            <RegExp input="$$1" output="\1" dest="6">
                <expression noclean="1">h2&gt;HD Video with(.*?)&lt;/h2</expression>
            </RegExp>
            <RegExp input="$$6" output="&lt;director&gt;\1&lt;/director&gt;" dest="5+">
                <expression fixchars="1" repeat="yes">&quot;&gt;([^&lt;]+)&lt;</expression>
            </RegExp>
                
            <!-- Plot !-->
            <RegExp input="$$1" output="&lt;plot&gt;\1&lt;/plot&gt;" dest="5+">
                <expression fixchars="1">/div&gt;[^&lt;]+&lt;p&gt;([^&lt;]+)&lt;/</expression>
            </RegExp>

            <!-- Tagline !-->
            <RegExp input="$$1" output="&lt;tagline&gt;\1&lt;/tagline&gt;" dest="5+">
                <expression fixchars="1">basecolor&quot;&gt;([^&lt;]+)\|</expression>
            </RegExp>

            <!-- Set !-->
            <RegExp input="" output="&lt;set&gt;JoyMii&lt;/set&gt;" dest="5+">
                <expression />
            </RegExp>

            <!-- Thumbnail !-->
            <RegExp input="$$1" output="&lt;thumb&gt;\1&lt;/thumb&gt;" dest="5+">
                <expression noclean="1">img src=&quot;([^&quot;]+)&quot width=&quot;[0-9]+&quot; height=&quot;[0-9]+&quot; alt=&quot;Member's Gallery</expression>
            </RegExp>

            <!-- Fanart !-->
            <RegExp input="$$1" output="&lt;fanart&gt;&lt;thumb&gt;\1&lt;/thumb&gt;&lt;/fanart&gt;" dest="5+">
                <expression noclean="1">get-cover&quot;&gt;&lt;a href=&quot;([^&quot;]+)&quot;</expression>
            </RegExp>
            <expression noclean="1"/>
        </RegExp>
    </GetDetails>
</scraper>