<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="metadata.filmweb.pl-lite"
       name="Filmweb Lite"
       version="1.2.10"
       provider-name="Regss">
    <requires>
    <import addon="xbmc.metadata" version="2.1.0" />
    <import addon="metadata.common.themoviedb.org" version="2.8.0" />
    <import addon="plugin.video.youtube" version="2.9.1" optional="true" />
    </requires>
    <extension point="xbmc.metadata.scraper.movies"
               language="pl"
               library="filmweb-lite.xml" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Filmweb Movie Scraper</summary>
        <summary lang="pl">Scraper filmowy Filmweb</summary>
        <description lang="en">Download Movie information from filmweb.pl</description>
        <description lang="pl">Pobiera informacje o filmie ze strony www.filmweb.pl Umożliwia konfigurację poprzez wyłączenie poszczególnych funkcji w celu przyspieszenia działania</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="plugin.audio.polskie.stacje"
       name="Polskie Stacje"
       version="1.0.1"
       provider-name="Regss">
  <requires>
    <import addon="xbmc.python" version="2.0" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Polish radio package</summary>
    <summary lang="pl">Zbiór Polskich stacji radiowych</summary>
    <description lang="en">Allows you to listen Polish radio stations</description>
    <description lang="pl">Pozwala na odsłuchiwanie Polskich stacji radiowych</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.filmweb.pl.trailery"
    name="Filmweb.pl - Trailery"
    version="1.0.0"
    provider-name="Regss">
    <requires>
        <import addon="xbmc.python" version="2.0" />
        <import addon="plugin.video.youtube" version="2.9.1" optional="true" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Trailers from Filmweb.pl</summary>
        <summary lang="pl">Trailery z Filmweb.pl</summary>
        <description lang="en">Display and create playlist for trailers from Filmweb.pl</description>
        <description lang="pl">Wyświetla i tworzy playlisty dla trailerów Filmweb.pl</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="repository.regss" name="Regss Add-ons" version="1.2.1" provider-name="Regss">
    <extension point="xbmc.addon.repository" name="Regss Add-ons">
		<info compressed="true">https://raw.github.com/Regss/xbmc-regss-repository/master/addons.xml</info>
		<checksum>https://raw.github.com/Regss/xbmc-regss-repository/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/Regss/xbmc-regss-repository/master/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Regss Add-ons repository</summary>
        <summary lang="pl">Regss - repozytorium dodatków</summary>
        <description>Download Regss Add-ons</description>
        <description lang="pl">Pobieraj i instaluj dodatki z repozytorium Regss'a</description>
        <disclaimer> - </disclaimer>
        <disclaimer lang="pl"> - </disclaimer>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.movielib"
    name="Movielib"
    version="1.1.7"
    provider-name="Regss">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="service.movielib" />
    </requires>
    <extension point="xbmc.python.script" library="default.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Script for web movie collection</summary>
        <summary lang="pl">Skrypt dla internetowej kolekcji filmów</summary>
        <description lang="en">Script updates web movie collection. Which can be downloaded from https://github.com/Regss/movielib</description>
        <description lang="pl">Skrypt aktualizuje na bieżąco internetową kolekcję filmów. Która jest do ściągnięcia z https://github.com/Regss/movielib</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.show.image"
    name="Show Image"
    version="1.0.1"
    provider-name="Regss">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.pil" version="1.1.7" />
    </requires>
    <extension point="xbmc.python.script" library="default.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Displays the selected image in any location</summary>
        <summary lang="pl">Wyświetla wybrany obrazek w dowolnym miejscu[CR]</summary>
        <description lang="en">Displays the selected image in any location[CR]Use:[CR]RunScript(script.show.window, [image number])</description>
        <description lang="pl">Wyświetla wybrany obrazek w dowolnym miejscu[CR]Użyj:[CR]RunScript(script.show.window, [image number])</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="script.tag.star.rating"
    name="Tag Star Rating"
    version="1.1.1"
    provider-name="Regss">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="service.tag.star.rating" />
    </requires>
    <extension point="xbmc.python.script" library="default.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Easy way to rate yor video with the stars</summary>
        <summary lang="pl">Prosty sposób na ocenę swoich filmów za pomocą systemu gwiazdek</summary>
        <description lang="en">Display a star rating system and save it as movie tag.[CR]Script run automatically when player stops.[CR]To use manualy add to your keymap file:[CR]RunScript(script.tag.star.rating, $INFO[ListItem.DBID])[CR]To disable auto start turn off Tag Star Rating Service</description>
        <description lang="pl">Wyświetla system oceny i zapisuje wyniki jako tagi filmów.[CR]Skrypt uruchamia się automatycznie po zatrzymaniu filmów[CR]Aby użyć manualnie dodaj do swojego pliku z definicjami klawiszy:[CR]RunScript(script.tag.star.rating, $INFO[ListItem.DBID])[CR]Aby wyłączyć automatyczne uruchamianie wyłącz usługę Tag Star Rating Service</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="service.movielib"
    name="Movielib Service"
    version="1.0.1"
    provider-name="Regss">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
    </requires>
    <extension point="xbmc.service" library="default.py" start="[login|startup]" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Service for movielib script</summary>
        <summary lang="pl">Usługa dla skryptu movielib</summary>
        <description lang="en">Service for movielib script</description>
        <description lang="pl">Usługa dla skryptu movielib</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="service.tag.star.rating"
    name="Tag Star Rating Service"
    version="1.0.1"
    provider-name="Regss">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.tag.star.rating" />
    </requires>
    <extension point="xbmc.service" library="default.py" start="[login|startup]" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Service for Tag Star Rating script</summary>
        <summary lang="pl">Usługa dla skryptu Tag Star Rating</summary>
        <description lang="en">Service script for Tag Star Rating script to run it automaticly after stop video</description>
        <description lang="pl">Usługa dla skryptu Tag Star Rating pozwalająca na automatyczne uruchamianie po zatrzymaniu filmu</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
